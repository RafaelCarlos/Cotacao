<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d1d1"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_activity_dolar_turismo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentLeft="true"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <ImageView
                android:id="@+id/iv_logo_activity_dolar_turismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tb_activity_dolar_turismo"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" />

            <EditText
                android:id="@+id/et_valor_activity_dolar_turismo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_logo_activity_dolar_turismo"
                android:layout_marginTop="10dp"
                android:background="#e7d4d4"
                android:ems="10"
                android:hint="Informe o valor "
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/et_dolar_turismo_activity_dolar_turismo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/et_valor_activity_dolar_turismo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:background="#e7d4d4"
                android:ems="10"
                android:hint="Informe o valor do dolar de turismo"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/tv_resultado_activity_dolar_turismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_dolar_turismo_activity_dolar_turismo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_calcular_activity_dolar_turismo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_resultado_activity_dolar_turismo"
                android:layout_marginTop="60dp"
                android:text="Calcular" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>